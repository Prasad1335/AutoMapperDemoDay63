@using WebApplication1.Models.ViewModel
@model List<UserViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-danger" asp-action="Create">Create New User</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr class="bg-warning">
            <th>Id</th>
            <th>FirstName</th>
            <th> LastName</th>
            <th> DateOfBirth </th>
            <th> Address </th>
            <th> Gender </th>
            <th> MobileNumber</th>
            <th> Email</th>
            <th colspan="3"> operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id

                </td>
                <td>
                    @item.FirstName

                </td>
                <td>
                    @item.LastName
                </td>
                <td>
                    @item.DateOfBirth
                </td>

                <td>
                    @item.Address
                </td>
                <td>
                    @item.Gender
                </td>
                <td>
                    @item.MobileNumber
                </td>
                <td>
                    @item.Email
                </td>

                <td>
                    <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                </td>
                <td> <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a> </td>
                <td>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>