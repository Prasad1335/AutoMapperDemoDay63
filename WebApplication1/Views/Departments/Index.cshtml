@using WebApplication1.Models.ViewModel
@model List<DepartmentViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-danger" asp-action="Create">Create New</a>
</p>
<table class="table table-bordered ">
    <thead class="text-center bg-warning">
        <tr class="text-center">
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th colspan="3">Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td> @item.Id</td>
                <td> @item.Name</td>
                <td> @item.Description </td>
                <td>
                    <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                </td>
                <td> <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a> </td>
                <td>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
